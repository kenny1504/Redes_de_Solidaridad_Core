
@{
	ViewData["Title"] = "Agregar";
}

<!--form para poder activar la ruta y poder guardar el registro--><!-- -->
<form id="ingresar_Instituciones">
	<div class="modal  modal-info fade" id="ingresar_Institucion">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
					<h4 class="modal-title">Ingresar Institucion</h4>
				</div>
				<div class="modal-body ">
					<div class="register-box-body" style="background-color:#eee;">
						<div class="form-group has-feedback">
							<input type="text" id="Institucion" autocomplete="off" name="Institucion" class="form-control requerido" required placeholder="Nombre de Institucion">
						</div>
						<div class="form-group has-feedback">
							<input type="text" id="Direcccion" autocomplete="off" name="Direcccion" class="form-control requerido" required placeholder="Direccion">
						</div>
						<div class="form-group has-feedback">
							<input type="text" id="Usuario"  name="Usuario" class="form-control requerido" required placeholder="Nombre de Usuario">
						</div>
						<div class="form-group has-feedback">
							<input type="password" id="Contrasena"  name="Contraseña" class="form-control requerido" autocomplete="new-password" required placeholder="Contraseña">
						</div>
					</div>
					<div class="modal-footer">
						<button type="reset" class="btn btn-outline pull-left" data-dismiss="modal">Cancelar</button>
						<button type="submit" onclick="Registro_Institucion()" class="btn btn-outline">Guardar</button>
					</div>
					<!-- /.modal-content -->
				</div>
				<!-- /.modal-dialog -->
			</div>
		</div>
	</div>
</form>

