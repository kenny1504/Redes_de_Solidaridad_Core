@{
	Layout = "~/Areas/LTE/Views/Shared/_Layout.cshtml";
	ViewData["Title"] = "Usuarios";
}

<div class="box">
	<div class="box-header">
		<h2 class="box-title text-light-blue">Usarios</h2>

		<div class="box-tools pull-right" id="filtros-Usarios">
			<div class="form-group">
				<div class=" col-lg-2">
					<a href="#" data-toggle="modal" data-target="#ingresar_Institucion" class="btn btn-warning btn-sm" id="m2">Agregar Institucion</a>
				</div>
				<div class=" col-lg-2">
					<a href="#" onclick="ingresar_Usuario_D();" class="btn btn-warning btn-sm" id="m2">Agregar Docente</a>
				</div>
				<div class=" col-lg-2">
					<div class="input-group input-group-sm hidden-xs" style="width: 350px;">
						<input type="text" id="buscarU" name="table_search" class="form-control " placeholder="Buscar Nombre de usuario">
						<div class="input-group-btn">
							<span style="margin-right:2em;" class="btn btn-default"><i class="fa fa-search"></i></span>
						</div>
					</div>
				</div>
				<div class="col-lg-3 pull-right">
					<select aria-required="true" required style="width: 70%; padding-top: 2.5%; " name="tipo" id="tipo">
						<option value="" disabled selected>Tipo</option>
						<option value="2">Docente</option>
						<option value="3">Institucion</option>
					</select>
					<a type="submit" style="width: 30%; padding-top: 1.4%; " onclick="Mostrar_Usuarios();" class="btn btn-primary btn-sm pull-right" id="Mostrar "><i class="fa fa-search"></i></a>
				</div>
			</div>
		</div>
	</div>
	<!-- /.box-header -->
	<div class="box-body panel box box-primary">
		<form>
			<table id="Usuarios" class="table table-bordered table-striped">
			</table>
		</form>
	</div>
	<div class="panel box box-primary"></div><!-- /.box-body -->
</div>


<style>
	/* Codigo para aplicar placeholder a combobox */
	option[value=""][disabled] {
		display: none;
	}

	.register-box-body {
		color: gray !important;
	}

	.btn-default {
		border-color: #075f75;
	}

	.btn-primary {
		background-color: #3c8dbc;
		border-color: #367fa9;
		color: white;
		border-color: white;
	}

	.stepwizard-step p {
		margin-top: 10px;
	}

	.stepwizard-row {
		display: table-row;
	}

	.stepwizard {
		display: table;
		width: 100%;
		position: relative;
	}

	.stepwizard-step button[disabled] {
		opacity: 1 !important;
		filter: alpha(opacity=100) !important;
	}

	.stepwizard-row:before {
		top: 14px;
		bottom: 0;
		position: absolute;
		content: " ";
		width: 100%;
		height: 2.5px;
		background-color: #075f75;
		z-order: 0;
	}

	.stepwizard-step {
		display: table-cell;
		text-align: center;
		position: relative;
	}

	.btn-circle {
		width: 30px;
		height: 30px;
		text-align: center;
		padding: 6px 0;
		font-size: 12px;
		line-height: 1.428571429;
		border-radius: 15px;
	}

	.oculta {
		display: none;
	}

	.muestra {
		display: table-row;
	}
</style>

<!--Modales-->
@Html.Partial("~/Areas/Usuarios/Views/Agregar_Institucion.cshtml")
@Html.Partial("~/Areas/Usuarios/Views/Eliminar.cshtml")
@Html.Partial("~/Areas/Usuarios/Views/Editar_Institucion.cshtml")
@Html.Partial("~/Areas/Usuarios/Views/Agregar_Docente.cshtml")
@Html.Partial("~/Areas/Usuarios/Views/Eliminar_Docente.cshtml")
@Html.Partial("~/Areas/Usuarios/Views/Editar_Docente.cshtml")

@section Scripts {
	<script type="text/javascript" src="~/js/js-redes/Usuario/ver.js"></script> <!-- script mostrar usuarios-->
	<script type="text/javascript" src="~/js/js-redes/Usuario/crear.js"></script> <!-- script Crear usuarios-->
	<script type="text/javascript" src="~/js/js-redes/Usuario/Eliminar_Usuario_Docente.js"></script> <!-- script eliminar usuarios Docentes-->
	<script type="text/javascript" src="~/js/js-redes/Usuario/eliminar.js"></script> <!-- script eliminar usuarios-->
	<script type="text/javascript" src="~/js/js-redes/Usuario/editar.js"></script> <!-- script editar usuarios-->
	<script type="text/javascript" src="~/js/js-redes/Usuario/crear_Usuario_Docente.js"></script> <!-- script Crear usuarios Docente-->
	<script type="text/javascript" src="~/js/js-redes/Usuario/Editar_Usuario_Docente.js"></script> <!-- script editar usuarios Docente-->
	<script type="text/javascript" src="~/js/js-redes/Usuario/buscar.js"></script> <!-- script editar usuarios Docente-->
}