
@{
    ViewData["Title"] = "Inicio de sesion | eduNICA";
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<link rel="icon" href="~/lte/dist/img/eduNica.png">
	<title>login | eduNICA</title> <!-- Titulo de la pagina-->
	<!-- Tell the browser to be responsive to screen width -->
	<meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
	<link rel="stylesheet" href="~/js/login.css" type="text/css">
	<style>
		.Nombre {
			font-size: 40px;
			color: white;
		}
	</style>
</head>
<body>
	<img style="width: 500px;" src="~/lte/dist/img/eduNica_Logo.png" alt="Sitio web Administrativo" />
	<form  id="login" onsubmit="event.preventDefault()" >
		<div class="wrapper">
			<div class="rec-prism">
				<div class="face face-front">
					<div class="content">
						<h3>Inicio de Sesion</h3>
						<form  onsubmit="event.preventDefault()">
							<br>
							<div class="field-wrapper">
								<input required type="text" id="usuario" name="username" placeholder="username">
								<label>Usuario</label>
							</div>
							<div class="field-wrapper">
								<input required type="password" id="password" name="password" onkeypress="Ingresar()" placeholder="password" autocomplete="new-password">
								<label>Contraseña</label>
							</div>
							<div class="field-wrapper">
								<input type="submit" onclick="autenticar()" class="exito" style="text-align: center;" id="Entrar" value="Enviar">
							</div>
							<div class="field-wrapper">
								<input style="text-align: center;" class="exito" onclick="showContactUs()" value="Registrarse" />
							</div>
						</form>
					</div>
				</div>
				<div class="face face-right">
					<div class="content">
						<h1 style="color:#ff00008a">Credenciales incorrectas</h1>
						<h3 style="color:#ff00008a">El usuario o contraseña que ha ingresado es incorrecto, Contacte con el administrador</h3>
						<form onsubmit="event.preventDefault()">
							<h1><i class="fa fa-fw fa-frown-o"></i></h1>
							<div class="field-wrapper">
								<input  class="exito" style="text-align: center;" id="exito" value="Intente nuevamente" onclick="showLogin()">
							</div>
						</form>
					</div>
				</div>
				<div class="face face-bottom">
					<div class="content">
						<div class="thank-you-msg">
							Bienvenido!
						</div>
					</div>
				</div>
				<div class="face face-left">
					<div class="content">
						<h3>Registrando Institucion</h3>
						<form id="registrarse" onsubmit="event.preventDefault()">
							<br>
							<div class="field-wrapper">
								<input required type="text" id="Institucion" name="Institucion" autocomplete="off" placeholder="username">
								<label>Nombre de Institucion</label>
							</div>
							<div class="field-wrapper">
								<input required type="text"  id="Direcccion" name="Direcccion"  autocomplete="off" placeholder="password" autocomplete="new-password">
								<label>Direcccion</label>
							</div>
							<div class="field-wrapper">
								<input required type="text" id="Usuario" name="Usuario"  placeholder="password" autocomplete="new-password">
								<label>Usuario</label>
							</div>
							<div class="field-wrapper">
								<input required  type="password" id="Contrasena" name="Contraseña" placeholder="password" autocomplete="new-password">
								<label>Contraseña</label>
							</div>
							<div class="field-wrapper">
								<input type="submit"  onclick="Registrar()" class="exito" style="text-align: center;" id="Registrarse" value="Enviar" >
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</form>

	<script type="text/javascript" src="~/lte/bower_components/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="~/js/login.js"></script><!--	Script para validar sesion-->
</body>
</html>

